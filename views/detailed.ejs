<%- include('./partials/head.ejs')  %>

<body>
  <%- include('./partials/nav.ejs') %>
  <div class="details content">
    <h2> <%= blogs.title %> </h2>
    <div class="content">
      <p> <%= blogs.snippet %> </p>
      <p> <%= blogs.body %> </p>
    </div>
    <a class="delete" data-doc="<%=blogs._id%>">Delete</a>
  </div>
</body>
<%- include('./partials/footer.ejs')  %>
<script>
  const del = document.querySelector('a.delete');

  del.addEventListener('click', (e) => {
    const endpoint = `blogs/${del.dataset.doc}`;
    fetch(endpoint, {
      method: 'DELETE'
    }).then((response) => {
      response.json()
    }).then((data) => {
      console.log(data)
    }).catch((err) => {
      console.log(err)
    })
  });
</script>

</html>